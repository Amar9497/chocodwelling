<!-- Success Alert -->
<% if (typeof success !== 'undefined' && success && success.length > 0) { %>
  <div class="fixed top-20 right-4 z-50 animate-slide-in" id="success-alert">
    <div class="flex items-center p-4 bg-white border-l-4 border-green-500 rounded-lg shadow-lg">
      <!-- Icon -->
      <div class="text-green-500 rounded-full bg-green-100 mr-3">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <!-- Message -->
      <div class="text-green-800"><%= success %></div>
      <!-- Close button -->
      <button class="ml-auto text-gray-400 hover:text-gray-500" onclick="closeAlert(this)">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>
<% } %>

<!-- Error Alert -->
<% if (typeof error !== 'undefined' && error && error.length > 0) { %>
  <div class="fixed top-20 right-4 z-50 animate-slide-in" id="error-alert">
    <div class="flex items-center p-4 bg-white border-l-4 border-red-500 rounded-lg shadow-lg">
      <!-- Icon -->
      <div class="flex-shrink-0">
        <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      
      <!-- Message -->
      <div class="ml-3">
        <p class="text-sm font-medium text-red-800">
          <%= error %>
        </p>
      </div>
      
      <!-- Close Button -->
      <button class="ml-4 flex-shrink-0 text-red-600 hover:text-red-800 focus:outline-none"
              onclick="closeAlert('error-alert')">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" 
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" 
                clip-rule="evenodd"/>
        </svg>
      </button>
    </div>
  </div>
<% } %>
  
  <!-- Add this to your CSS/Tailwind config -->
  <style>
      @keyframes slideIn {
          from {
              transform: translateX(100%);
              opacity: 0;
          }
          to {
              transform: translateX(0);
              opacity: 1;
          }
      }
  
      @keyframes slideOut {
          from {
              transform: translateX(0);
              opacity: 1;
          }
          to {
              transform: translateX(100%);
              opacity: 0;
          }
      }
  
      .animate-slide-in {
          animation: slideIn 0.5s ease-out forwards;
      }
  
      .animate-slide-out {
          animation: slideOut 0.5s ease-in forwards;
      }
  </style>
  
  <script>
  function closeAlert(alertId) {
      const alert = document.getElementById(alertId);
      if (alert) {
          alert.classList.remove('animate-slide-in');
          alert.classList.add('animate-slide-out');
          setTimeout(() => alert.remove(), 500);
      }
  }
  
  // Auto-close alerts after 5 seconds
  document.addEventListener('DOMContentLoaded', () => {
      ['success-alert', 'error-alert'].forEach(alertId => {
          const alert = document.getElementById(alertId);
          if (alert) {
              setTimeout(() => {
                  if (alert) {
                      alert.classList.remove('animate-slide-in');
                      alert.classList.add('animate-slide-out');
                      setTimeout(() => alert.remove(), 500);
                  }
              }, 5000);
          }
      });
  });
  </script>