<!-- Success Alert -->
<% if (typeof success !== 'undefined' && success && success.length > 0) { %>
    <script>console.log('Rendering success alert with:', <%= JSON.stringify(success) %>);</script>
    <div class="fixed top-20 right-4 z-50 animate-slide-in" id="success-alert">
        <div class="flex items-center p-4 bg-white border-l-4 border-green-500 rounded-lg shadow-lg">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
            </div>
            <div class="ml-3">
                <p class="text-sm leading-5 text-green-800">
                    <%= Array.isArray(success) ? success[0] : success %>
                </p>
            </div>
            <button class="ml-auto" onclick="closeAlert('success-alert')">
                <svg class="h-4 w-4 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
            </button>
        </div>
    </div>
<% } %>

