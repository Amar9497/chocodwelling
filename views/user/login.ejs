<body class="bg-gray-50 font-sans">
  <!-- Debug info -->
  <script>
    console.log('Page loaded with variables:', {
      success: <%- JSON.stringify(typeof success !== 'undefined' ? success : null) %>,
      error: <%- JSON.stringify(typeof error !== 'undefined' ? error : null) %>
    });
  </script>

  <!-- Navbar -->
  <%- include('navbar') %>

  <!-- Alert -->
  <%- include('./alert', { success: success, error: error }) %>

  <!-- Login Section -->
  <section class="flex items-center justify-center min-h-screen px-4 py-8">
    <div class="bg-white p-6 md:p-8 rounded-xl shadow-lg w-full max-w-md">
      <!-- Heading -->
      <h2 class="text-center text-3xl font-extrabold mb-4 text-[#A79277]">
        Welcome Back!
      </h2>
      <p class="text-center text-gray-600 mb-6">Login to access your account</p>

      <!-- Login Form -->
      <form action="/login" method="POST" class="space-y-6">
        <!-- Email Input -->
        <div>
          <label
            for="email"
            class="block text-sm font-medium text-gray-700 mb-2"
            >Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Enter your email"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#D4A799] focus:outline-none"
          />
        </div>

        <!-- Password Input -->
        <div>
          <label
            for="password"
            class="block text-sm font-medium text-gray-700 mb-2"
            >Password</label
          >
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#D4A799] focus:outline-none"
          />
        </div>

        <!-- Forgot Password -->
        <div class="text-right">
          <a
            href="/forgotpassword"
            class="text-sm text-[#6A4C93] hover:underline"
            >Forgot Password?</a
          >
        </div>

        <!-- Login Button -->
        <button
          type="submit"
          class="w-full bg-[#A79277] text-white py-3 rounded-lg font-semibold text-lg hover:bg-[#8C725C] transition"
        >
          Login
        </button>
      </form>

      <!-- Divider -->
      <div class="flex items-center my-6">
        <hr class="flex-grow border-t border-gray-300" />
        <span class="mx-4 text-gray-500 text-sm">OR</span>
        <hr class="flex-grow border-t border-gray-300" />
      </div>

      <!-- Google Login -->
      <a href="/auth/google">
        <button
          class="w-full flex items-center justify-center bg-white border border-gray-300 py-2 rounded-lg hover:bg-gray-100 transition"
        >
          <img
            src="/public/assets/google_logo.png"
            alt="Google"
            class="w-5 h-5 mr-3"
          />
          <span class="text-gray-700 font-medium">Login with Google</span>
        </button>
      </a>

      <!-- Sign Up Prompt -->
      <div class="text-center mt-6 text-gray-600 text-sm">
        <span>New User? </span>
        <a href="/signup" class="text-[#6A4C93] font-medium hover:underline"
          >Create an Account</a
        >
      </div>
    </div>
  </section>

  <!-- Footer -->
  <%- include('footer') %>
</body>
